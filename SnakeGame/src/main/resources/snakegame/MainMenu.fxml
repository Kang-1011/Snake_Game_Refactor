<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.media.MediaView?>

<AnchorPane fx:id="scenePane" prefHeight="750.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="snakegame.controller.MainMenuController">
    <MediaView fx:id="mediaView" />
    <ImageView fx:id="image1" fitHeight="750.0" fitWidth="1300.0" layoutX="0.0" layoutY="0.0" pickOnBounds="true">
        <image>
            <Image url="@scene1bg.jpg"/>
        </image>
    </ImageView>
    <Label fx:id="title" layoutX="628.0" layoutY="89.0" text="Snake Game">
        <font>
            <Font name="Harrington" size="65.0"/>
        </font>
    </Label>
    <Button fx:id="start" layoutX="706.0" layoutY="203.0" mnemonicParsing="false" onAction="#switchtoGame" text="Start"
            textFill="#efefef">
        <style>
            -fx-background-color: rgba(152,211,164,0.5);
        </style>
        <font>
            <Font name="Goudy Stout" size="25.0"/>
        </font>
    </Button>
    <Button fx:id="info" layoutX="726.0" layoutY="303.0" mnemonicParsing="false" onAction="#switchtoInfo" text="INFO"
            textFill="#f4eeee">
        <style>
            -fx-background-color: rgba(152,211,164,0.5);
        </style>
        <font>
            <Font name="Goudy Stout" size="25.0"/>
        </font>
    </Button>
    <Button fx:id="option" layoutX="695.0" layoutY="403.0" mnemonicParsing="false" onAction="#switchToOption"
            text="Option" textFill="#faf7f7">
        <style>
            -fx-background-color: rgba(152,211,164,0.5);
        </style>
        <font>
            <Font name="Goudy Stout" size="25.0"/>
        </font>
    </Button>
    <Button fx:id="exit" layoutX="724.0" layoutY="503.0" mnemonicParsing="false" onAction="#exitGame" text="Exit"
            textFill="#f2f1f1">
        <style>
            -fx-background-color: rgba(152,211,164,0.5);
        </style>
        <font>
            <Font name="Goudy Stout" size="25.0"/>
        </font>
    </Button>
</AnchorPane>
